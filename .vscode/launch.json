{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug executable (cargo build)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/${workspaceFolderBasename}",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "cargo build",
            "stopOnEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Run with args",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/${workspaceFolderBasename}",
            "args": [
                "--help"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "cargo build",
            "stopOnEntry": false,
            "console": "integratedTerminal"
        }
    ]
}